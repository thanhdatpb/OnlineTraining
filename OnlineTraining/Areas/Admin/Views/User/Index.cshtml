@model PagedList.IPagedList<Model.User>

    @{
    ViewBag.Title = "Quản lý tài khoản người dùng";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
    }
    @section ChildCSS
    {
    <link href="~/web/admin/libs/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/scroller.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
    }

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <table style="width:100%;">
                        <tr>
                            <td>
                                <h3 class="card-title">Danh sách tài khoản người dùng</h3>
                            </td>
                            <td style="text-align:right;">
                                <button class="btn btn-primary waves-effect waves-light" data-toggle="modal" data-target="#hop-thoai-modal">Thêm mới</button>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 col-sm-12 col-12">
                            <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Tài khoản</th>
                                        <th>Họ tên</th>
                                        <th>Địa chỉ</th>
                                        <th>Email</th>
                                        <th>Trạng thái</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row_@item.ID">
                                        <td>@item.ID</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td><a href="#" class="badge bg-info">@Html.Raw(@item.Status ? "<strong>Kích hoạt</strong>" : "<font style='color:red;'>Khóa</font>")</a></td>
                                        <td style="text-align:center;width:15px;vertical-align:middle;">

                                            @Ajax.ActionLink("Xóa tài khoản", "Delete", new { @id = item.ID }, new AjaxOptions
                                            {
                                            Confirm = "Bạn có muốn xóa không ?",
                                            OnComplete = "$('#row_" + item.ID + "').remove()",
                                            HttpMethod = "Delete"
                                            }, new
                                            {
                                            @class = "badge badge-danger"
                                            })
                                        </td>
                                        <td style="width:10px;">
                                            <a class="badge btn-link" href="#" id="alert_@item.ID"
                                               role="button" data-toggle="modal" data-target="#con-close-modal-edit-@item.ID">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <div id="con-close-modal-edit-@item.ID" class="modal fade"
                                                 tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"
                                                 style="display: none;">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title">cập nhật tài khoản</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label for="field-1" class="control-label">Tài khoản</label>
                                                                        <input type="text" class="form-control" value="@item.UserName"
                                                                               disabled="disabled" id="e_username_@item.ID" placeholder="">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label for="field-2" class="control-label">Mật khẩu</label>
                                                                        <input type="text" class="form-control" value="@item.Password"
                                                                               id="e_password_@item.ID" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group">
                                                                        <label for="field-3" class="control-label">Họ và tên</label>
                                                                        <input type="text" class="form-control" value="@item.Name"
                                                                               id="e_name_@item.ID" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-12">
                                                                    <div class="form-group no-margin">
                                                                        <label for="field-7" class="control-label">Địa chỉ</label>
                                                                        <input type="text" class="form-control" value="@item.Address"
                                                                               id="e_address_@item.ID" placeholder="">

                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label for="field-1" class="control-label">Email</label>
                                                                        <input type="text" class="form-control"
                                                                               value="@item.Email" id="e_email_@item.ID" placeholder="">
                                                                    </div>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <div class="form-group">
                                                                        <label for="field-2" class="control-label">Điện thoại</label>
                                                                        <input type="text" class="form-control" value="@item.Phone"
                                                                               id="e_phone_@item.ID" placeholder="">
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary
                                                                waves-effect" data-dismiss="modal">
                                                                Thoát
                                                            </button>
                                                            <a class="capNhat" data-listid="@item.ID"
                                                               data-password="e_password_@item.ID" data-name="e_name_@item.ID"
                                                               data-address="e_address_@item.ID" data-email="e_email_@item.ID"
                                                               data-phone="e_phone_@item.ID">
                                                                <input type="submit" id="btnUpdateUser" class="btn btn-info
                                                                 waves-effect waves-light" value="Cập nhật" />
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section ChildJS
    {
    <script src="~/web/admin/libs/bootstrap/js/bootbox.min.js"></script>

    <!--Khai báo thư viện để chạy Ajax-->
    <script src="~/web/admin/libs/jquery/jquery.min.js"></script>
    <script src="~/web/admin/libs/jquery/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/web/admin/libs/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/web/admin/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.responsive.min.js"></script>
    <script src="~/web/admin/libs/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.buttons.min.js"></script>
    <script src="~/web/admin/libs/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/jszip/jszip.min.js"></script>
    <script src="~/web/admin/libs/pdfmake/pdfmake.min.js"></script>
    <script src="~/web/admin/libs/pdfmake/vfs_fonts.js"></script>
    <script src="~/web/admin/libs/datatables/buttons.print.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.scroller.min.js"></script>

    <!-- Datatables init -->
    <script src="~/web/admin/js/pages/datatables.init.js"></script>

    <script src="~/web/admin/controller/userController.js"></script>
    }
    <div id="hop-thoai-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Màn hình thêm mới tài khoản</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Tài khoản</label>
                                <input type="text" class="form-control" id="m_username" placeholder="Tài khoản">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Mật khẩu</label>
                                <input type="text" class="form-control" id="m_password" placeholder="Mật khẩu">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="field-3" class="control-label">Họ và tên</label>
                                <input type="text" class="form-control" id="m_name" placeholder="Họ và tên">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group no-margin">
                                <label for="field-7" class="control-label">Địa chỉ</label>
                                <input type="text" class="form-control" id="m_address" placeholder="Địa chỉ">

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-1" class="control-label">Email</label>
                                <input type="text" class="form-control" id="m_email" placeholder="Email">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="field-2" class="control-label">Điện thoại</label>
                                <input type="text" class="form-control" id="m_phone" placeholder="Điện thoại">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary waves-effect" data-dismiss="modal">Thoát</button>
                    <button type="button" id="btnAddNew" class="btn btn-info waves-effect waves-light">Tạo mới</button>
                </div>
            </div>
        </div>
    </div>