@model PagedList.IPagedList<Model.User>

@{
    ViewBag.Title = "Quản trị người dùng";
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@section ChildCSS
{
    <link href="~/web/admin/libs/datatables/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/web/admin/libs/datatables/scroller.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- App css -->
    <link href="~/web/admin/css/bootstrap.min.css" rel="stylesheet" type="text/css" id="bootstrap-stylesheet" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Danh sách tài khoản</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-12">
                        <table id="datatable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>UserName</th>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ID</td>
                                        <td>@item.UserName</td>
                                        <td>@item.Name</td>
                                        <td>@item.Address</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a href="#" class="badge bg-info">
                                                @Html.Raw(@item.Status ?
                                                "<strong>Kích hoạt</strong>" :
                                                "<font style='color:red;'>Khóa</font>")
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- End Row -->

@section ChildJS
{
    <script src="~/web/admin/libs/bootstrap/js/bootbox.min.js"></script>

    <!--Thư viện dùng để chạy Ajax-->
    <script src="~/web/admin/libs/jquery/jquery.min.js"></script>
    <script src="~/web/admin/libs/jquery/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/web/admin/libs/jquery-easing/jquery.easing.min.js"></script>

    <script src="~/web/admin/libs/datatables/jquery.dataTables.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.responsive.min.js"></script>
    <script src="~/web/admin/libs/datatables/responsive.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.buttons.min.js"></script>
    <script src="~/web/admin/libs/datatables/buttons.bootstrap4.min.js"></script>
    <script src="~/web/admin/libs/jszip/jszip.min.js"></script>
    <script src="~/web/admin/libs/pdfmake/pdfmake.min.js"></script>
    <script src="~/web/admin/libs/pdfmake/vfs_fonts.js"></script>
    <script src="~/web/admin/libs/datatables/buttons.print.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.keyTable.min.js"></script>
    <script src="~/web/admin/libs/datatables/dataTables.scroller.min.js"></script>
    <!-- Datatables init -->
    <script src="~/web/admin/js/pages/datatables.init.js"></script>
    <script src="~/web/admin/controller/userController.js"></script>
}